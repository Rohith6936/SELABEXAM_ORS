5)scripted pipeline
pipline 
write script 

pipeline {
    agent any

    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK17'
    }

    stages {

        stage('Checkout') {
            steps {
                cleanWs()
                git branch: 'main', url: 'https://github.com/nishneeth/mavenjava.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Package JAR') {
            steps {
                bat 'mvn package'
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build succeeded.'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
/////////////////////////////////////////////////////////////////////////////////////////////////
pipeline {
    agent any
    tools {
        maven "MAVEN_HOME"
    }
    stages {
        stage("git clone & mvn clean") {
            steps {
                bat "git clone https://github.com/...git"
                bat "mvn clean -f mavenjava"
            }
        }
        stage("mvn install") {
            steps { bat "mvn install -f mavenjava" }
        }
        stage("mvn test") {
            steps { bat "mvn test -f mavenjava" }
        }
        stage("mvn package") {
            steps { bat "mvn package -f mavenjava" }
        }
    }
}


